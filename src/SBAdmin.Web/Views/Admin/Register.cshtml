@model RegistrationViewModel
@{
    Layout = "Components/_Layout";
    ViewData["Title"] = "Register";
}

@section AdminCSS
{
    <link href="../Resources/SBAdmin/css/styles.css" rel="stylesheet" />
    <script src="../Resources/SBAdmin/vendors/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>
}


<div class="">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Account</h3></div>
                                <div class="card-body">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <form asp-action="Register" method="post">
                                        <div class="form-row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1"
                                                           asp-for="FirstName">
                                                    </label>
                                                    <input class="form-control py-4"
                                                           asp-for="FirstName"
                                                           required="required"
                                                           placeholder="Enter first name" />
                                                    <span asp-validation-for="FirstName"
                                                          class="text-danger">
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1"
                                                           asp-for="LastName">
                                                    </label>
                                                    <input class="form-control py-4"
                                                           asp-for="LastName"
                                                           required="required"
                                                           placeholder="Enter last name" />
                                                    <span asp-validation-for="LastName"
                                                          class="text-danger">
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="small mb-1" asp-for="UserName"></label>
                                            <input class="form-control py-4"
                                                   asp-for="UserName"
                                                   type="email"
                                                   required="required"
                                                   aria-describedby="emailHelp"
                                                   placeholder="Enter email address" />
                                            <span asp-validation-for="UserName"
                                                  class="text-danger">
                                            </span>
                                        </div>
                                        <div class="form-row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" asp-for="Password"></label>
                                                    <input class="form-control py-4"
                                                           asp-for="Password"
                                                           type="password"
                                                           placeholder="Enter password"
                                                           required="required" />
                                                    <span asp-validation-for="Password"
                                                          class="text-danger">
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="small mb-1" asp-for="ConfirmPassword"></label>
                                                    <input class="form-control py-4"
                                                           asp-for="ConfirmPassword"
                                                           type="password"
                                                           required="required"
                                                           placeholder="Confirm password" />
                                                    <span asp-validation-for="ConfirmPassword"
                                                          class="text-danger">
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group mt-4 mb-0">
                                            <input type="submit" class="btn btn-primary btn-block" value="Create Account" />
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center">
                                    <div class="small">
                                        <a asp-action="Login">
                                            Have an account? Go to login
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2020</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
</div>

@section AdminJS
{
    <script src="../Resources/SBAdmin/vendors/jquery/3.5.1/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="../Resources/SBAdmin/vendors/bootstrap/4.5.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="../Resources/SBAdmin/js/scripts.js"></script>
}
