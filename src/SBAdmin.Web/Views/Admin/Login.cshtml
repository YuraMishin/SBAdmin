@model LoginViewModel
@{
    Layout = "Components/_Layout";
    ViewData["Title"] = "Login";
}

@section AdminCSS
{
    <environment include="Development">
        <link href="~/Resources/SBAdmin/css/styles.css" rel="stylesheet" />
        <script src="~/Resources/SBAdmin/vendors/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>
    </environment>

    <environment include="Production">
        <link href="~/css/admin/base/styles.min.css" rel="stylesheet" />
    </environment>
}

@section AdminJS
{
    <environment include="Development">
        <script src="~/Resources/SBAdmin/vendors/jquery/3.5.1/jquery-3.5.1.slim.min.js" crossorigin="anonymous"></script>
        <script src="~/Resources/SBAdmin/vendors/bootstrap/4.5.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="~/Resources/SBAdmin/js/scripts.js"></script>
    </environment>

    <environment include="Production">
        <script src="~/js/admin/base/scripts.min.js" crossorigin="anonymous"></script>
    </environment>

}

<div class="">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                                <div class="card-body">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <form asp-action="Login" method="post">
                                        <div class="form-group">
                                            <label class="small mb-1" asp-for="UserName"></label>
                                            <input value="admin@mail.ru"
                                                   class="form-control py-4" asp-for="UserName" type="email" placeholder="Enter email address" />
                                            <span asp-validation-for="UserName"
                                                  class="text-danger">
                                            </span>
                                        </div>
                                        <div class="form-group">
                                            <label class="small mb-1" asp-for="Password"></label>
                                            <input value="Aa-1"
                                                   class="form-control py-4" asp-for="Password" type="password" placeholder="Enter password" />
                                            <span asp-validation-for="Password"
                                                  class="text-danger">
                                            </span>
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox">
                                                <input class="custom-control-input" asp-for="RememberMe" type="checkbox" />
                                                <label class="custom-control-label" asp-for="RememberMe"></label>
                                            </div>
                                        </div>
                                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <span>&nbsp;</span>
                                            <input type="submit" class="btn btn-primary" asp-action="Login" value="Submit" />
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center">
                                    <div class="small">
                                        <a asp-action="Register">
                                            Need an account? Sign up!
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2020</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
</div>
